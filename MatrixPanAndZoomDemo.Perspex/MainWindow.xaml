<Window x:Class="MatrixPanAndZoomDemo.Perspex.MainWindow"
        xmlns="https://github.com/perspex"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:MatrixPanAndZoomDemo.Perspex;assembly=MatrixPanAndZoomDemo.Perspex"
        UseLayoutRounding="True"
        Title="MainWindow" Height="600" Width="600">
    <Grid Background="SlateBlue">
        <local:PanAndZoom ClipToBounds="True" Background="DarkGray" VerticalAlignment="Center" HorizontalAlignment="Center" Width="500" Height="400">
            <Canvas Name="canvas" Background="LightGray" Width="300" Height="300">
                <Rectangle Canvas.Left="100" Canvas.Top="100" Width="50" Height="50" Fill="Red"/>
            </Canvas>
        </local:PanAndZoom>
    </Grid>
</Window>
